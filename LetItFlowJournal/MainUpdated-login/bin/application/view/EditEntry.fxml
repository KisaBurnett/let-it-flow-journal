<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.EntryController">
   <children>
      <BorderPane prefHeight="780.0" prefWidth="1280.0">
         <top>
            <VBox prefHeight="37.0" prefWidth="1280.0" BorderPane.alignment="CENTER">
               <children>
                  <MenuBar style="-fx-background-color: lightblue; -fx-border-color: #8dbfc9;">
                    <menus>
                      <Menu fx:id="menuFile" mnemonicParsing="false" text="File">
                        <items>
                          <MenuItem fx:id="fileOpen" mnemonicParsing="false" text="Open" />
                              <MenuItem fx:id="fileClose" mnemonicParsing="false" text="Close" />
                        </items>
                      </Menu>
                      <Menu fx:id="menuEdit" mnemonicParsing="false" text="Edit">
                        <items>
                          <MenuItem fx:id="editDelete" mnemonicParsing="false" text="Delete" />
                        </items>
                      </Menu>
                      <Menu fx:id="menuHelp" mnemonicParsing="false" text="Help">
                        <items>
                          <MenuItem fx:id="helpAbout" mnemonicParsing="false" text="About" />
                        </items>
                      </Menu>
                    </menus>
                  </MenuBar>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: lightblue; -fx-border-color: #8dbfc9;">
                    <items>
                      <Button fx:id="mainButton" mnemonicParsing="false" text="Main Menu" />
                        <Button fx:id="saveButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Save" />
                        <Button fx:id="motivateButton" layoutX="101.0" layoutY="10.0" mnemonicParsing="false" text="Motivate Me!" />
                    </items>
                  </ToolBar>
               </children>
            </VBox>
         </top>
         <center>
            <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: lightblue;" BorderPane.alignment="CENTER">
               <children>
                  <Label style="-fx-background-color: lightblue;" text="Entry Title">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="entryTitle">
                     <VBox.margin>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Label text="Entry Text">
                     <font>
                        <Font size="14.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <TextArea fx:id="entryText" prefHeight="741.0" prefWidth="1280.0" style="-fx-background-color: lightblue;">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </TextArea>
               </children>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
